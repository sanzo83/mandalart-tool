<!DOCTYPE html>
<html>
  <head>
    <title>MandalartTool</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <nav class="navbar navbar-expand-lg navbar-light bg-light">
     <a class="navbar-brand" href="/">mandalart-tool</a>
     <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
       <span class="navbar-toggler-icon"></span>
     </button>
     <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
       <div class="navbar-nav">
         <% if user_signed_in? %>
           <%= link_to 'プロフィール変更', edit_user_registration_path, class: "nav-item nav-link" %>
           <%= link_to 'ログアウト', destroy_user_session_path, method: :delete,  class: "nav-item nav-link" %>
         <% end %>
       </div>
     </div>
   </nav>
   <div class="container-fluid mt-3">
     <% if notice %>
       <div class="alert alert-info"><%= notice %></div>
     <% end %>
     <% if alert %>
       <div class="alert alert-danger"><%= alert %></div>
     <% end %>
    <%= yield %>
   </div>
  </body>
</html>
